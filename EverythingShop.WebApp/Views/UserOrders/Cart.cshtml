@model List<OrderProduct>

@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>
<hr />

@if (Model.Count == 0)
{
    <div class="text-center">
        <h5>Nothing in the Cart.</h5>
    </div>
    return;
}

@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="row m-0">
            <div class="col-md-4 p-0">
                <img class="img-thumbnail" src=@Html.DisplayFor(modelItem => item.Product.Picture)>
            </div>
            <div class="col-md-7 p-0">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Product.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Product.Price) Eur</p>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Product.Description)</small></p>
                </div>
            </div>
            <div class="col-md-1 p-1">
                <div class="card-body p-1">
                    <div>
                        <button type="button" class="btn btn-primary m-1"><i class="bi bi-cart-plus"></i></button>
                        <a href="#" type="button" class="btn btn-primary m-1"><i class="bi bi-cart-dash"></i></a>
                        <input class="form-control m-1" style="width: 42px" value="@item.Quantity" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-primary" asp-controller="UserOrders" asp-action="CompleteOrder">Complete This Order</a>
</div>