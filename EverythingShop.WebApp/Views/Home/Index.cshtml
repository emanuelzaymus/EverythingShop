@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @for (int i = 0; i < 2; i++)
    {
        <div class="row">
            @for (int j = 0; j < 4; j++)
            {
                var product = Model[4 * i + j];
                <div class="col-md-3 p-2">
                    <div class="card">
                        <img src="@product.Picture" class="card-img-top img-thumbnail" style="width: 100%; max-height:250px;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price Eur</p>
                            @*<p class="card-text"><small class="text-muted">@product.Description</small></p>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
