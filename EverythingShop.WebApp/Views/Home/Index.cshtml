@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @for (int i = 0; i < 2; i++)
    {
        <div class="row">
            @for (int j = 0; j < 4; j++)
            {
                var product = Model[4 * i + j];
                <div class="col-md-3 p-2">
                    <div class="card">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@product.Picture" class="card-img-top img-fluid" /> @*style="width: 100%; max-height:250px;">*@
                        </a>
                        <div class="card-body">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                <h5 class="card-title">@product.Name</h5>
                            </a>
                            <p class="card-text">@product.Price Eur</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
