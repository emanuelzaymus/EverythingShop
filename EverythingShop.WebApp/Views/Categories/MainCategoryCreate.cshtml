@model EverythingShop.WebApp.Models.MainCategory

@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Main Category</h1>
<hr />

<div class="row justify-content-md-center">
    <div class="col-md-8">
        <form asp-action="MainCategoryCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row justify-content-md-end px-2">
                <div class="col-md-2 m-2 p-0">
                    <a href="#" class="btn btn-primary w-100" onClick="goToPreviousPage()">Back</a>
                </div>
                <div class="col-md-2 m-2 p-0">
                    <input type="submit" value="Save" class="btn btn-success w-100" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
